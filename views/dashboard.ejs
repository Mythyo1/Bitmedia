<% include partials/header %>
<div class="mdl-layout--fixed-header mdl-layout mdl-js-layout">
  <header class="mdl-layout__header mdl-layout__header">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title">Welcome <%= firstName %> <%= lastName %>!</span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation -->
    </div>
  </header>
  <div class="mdl-layout__drawer mdl-color--orange-50">
    <span class="mdl-layout-title">Menu</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link" href="/dashboard">Dashboard</a>
      <a class="mdl-navigation__link" href="/blog">Blog</a>
      <a class="mdl-navigation__link" href="/settings">Settings</a>
      <a class="mdl-navigation__link" href="/logout">Logout</a>
    </nav>
  </div>
  <main class="mdl-layout__content dashboard-body">
    <div class="cards">
      <div class="welcome-card mdl-card mdl-shadow--2dp mr-4">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text">Welcome</h2>
        </div>
        <div class="mdl-card__supporting-text">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          Mauris sagittis pellentesque lacus eleifend lacinia...
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Get Started
          </a>
        </div>
        <div class="mdl-card__menu">
          <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
            <i class="material-icons">share</i>
          </button>
        </div>
      </div>
      
      <div class="profile-card mdl-card mdl-shadow--2dp ml-4">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text">New Task</h2>
        </div>
        <div class="mdl-card__supporting-text">
          <p>Click on the button to create a new task.</p>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Recent Tasks
          </a>
        </div>
        <div class="mdl-card__menu">
          <button class="mdl-button mdl-js-button mdl-button--fab" id="addBtn">
            <i class="material-icons">add</i>
          </button>
        </div>
      </div>
    </div>
    <dialog class="mdl-dialog my-dialog">
      <h4 class="mdl-dialog__title">New Task</h4>
      <div class="mdl-dialog__content">
        <form action="#" class="task-form">
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="sample3">
            <label class="mdl-textfield__label" for="sample3">Title</label>
          </div>
          <br/>
          <div class="mdl-textfield mdl-js-textfield">
            <textarea class="mdl-textfield__input" type="text" rows= "10" id="sample5" ></textarea>
            <label class="mdl-textfield__label" for="sample5">Text lines...</label>
          </div>
        </form>
      </div>
      <div class="mdl-dialog__actions">
        <button type="button" class="mdl-button" onclick="closeDialogTask()">Submit</button>
        <button type="button" class="mdl-button close" onclick="closeDialogTask()">Cancel</button>
      </div>
    </dialog>
  </main>
</div>
<script src="/scripts/index.js"></script>
<% include partials/footer %>