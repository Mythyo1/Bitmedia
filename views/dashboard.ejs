<% include partials/header %>
<div class="mdl-layout--fixed-header mdl-layout mdl-js-layout">
  <header class="mdl-layout__header mdl-layout__header mdl-color--blue">
    <div class="mdl-layout__header-row">
      <!-- Title -->
      <span class="mdl-layout-title">Welcome <%= firstName %> <%= lastName %>!</span>
      <!-- Add spacer, to align navigation to the right -->
      <div class="mdl-layout-spacer"></div>
      <!-- Navigation -->
    </div>
  </header>
  <div class="mdl-layout__drawer mdl-color--primary-dark">
    <span class="mdl-layout-title">Menu</span>
    <nav class="mdl-navigation">
      <a class="mdl-color-text--white mdl-navigation__link" href="/dashboard">Dashboard</a>
      <a class="mdl-color-text--white mdl-navigation__link" href="/blog">Blog</a>
      <a class="mdl-color-text--white mdl-navigation__link" href="/settings">Settings</a>
      <a class="mdl-color-text--white mdl-navigation__link" href="/logout">Logout</a>
    </nav>
  </div>
  <main class="mdl-layout__content dashboard-body">
    <div class="cards">
      <div class="welcome-card mdl-card mdl-shadow--16dp mr-4">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text">Welcome</h2>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            <% if(lastStatus) { %>
              <span>Last Update On: </span>
              <span><%= lastStatus.createdAt.toLocaleDateString() %></span>
              <span><%= lastStatus.createdAt.toLocaleTimeString() %></span>
              <span style="color: green"><%= lastStatus.statusContent %></span>
            <% } %>
          </a>
        </div>
        <div class="mdl-card__menu">
          <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
            <i class="material-icons">share</i>
          </button>
        </div>
      </div>

      <div class="profile-card mdl-card mdl-shadow--16dp ml-4">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text">New Task</h2>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Recent Tasks
          </a>
        </div>
        <div class="mdl-card__menu">
          <button class="mdl-button mdl-js-button mdl-button--fab" id="addBtn">
            <i class="material-icons">add</i>
          </button>
        </div>
      </div>
    </div>
    <% include partials/dashboard-main %>
    <% include partials/misc/dialog %>
  </main>
</div>
<script src="/scripts/index.js"></script>
<% include partials/footer %>
