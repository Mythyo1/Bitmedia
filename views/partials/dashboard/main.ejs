<div class="cards">
  <div class="welcome-card mdl-card mdl-shadow--16dp mr-4">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">Welcome</h2>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <% if(lastStatus) { %>
          <span>Last Update On: </span>
          <span id="statusUpdateDate"><%= lastStatus.createdAt.toLocaleDateString() %></span>
          <span id="statusUpdateTime"><%= lastStatus.createdAt.toLocaleTimeString() %></span>
          <span id="statusUpdateContent" style="color: green"><%= lastStatus.statusContent %></span>
        <% } %>
    </div>
    <div class="mdl-card__menu">
      <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
        <i class="material-icons">share</i>
      </button>
    </div>
  </div>

  <div class="profile-card mdl-card mdl-shadow--16dp ml-4">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">New Task</h2>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Recent Tasks
      </a>
    </div>
    <div class="mdl-card__menu">
      <button class="mdl-button mdl-js-button mdl-button--fab" id="addBtn">
        <i class="material-icons">add</i>
      </button>
    </div>
  </div>
</div>
