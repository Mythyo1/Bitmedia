<form class="user-form" method="POST" action="/auth/login">
    <% if(msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
            <%= msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
    <div class="login-form mdl-textfield mdl-textfield--floating-label mdl-js-textfield">
        <input class="mdl-textfield__input" type="email" name="username" id="email-mdl">
        <label class="mdl-textfield__label" for="email-mdl">E-Mail</label>
    </div>
    <div class="mdl-textfield mdl-textfield--floating-label mdl-js-textfield">
        <input class="mdl-textfield__input" type="password" name="password" id="password-mdl">
        <label class="mdl-textfield__label" for="password-mdl">Password</label>
    </div>
    <button class="btn btn-dark mdl-color--accent btn-block mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" type="submit">
        Login
    </button>
    <div class="mt-2 text-center">
        <a href="auth/login/facebook"><i class="fab fa-facebook icons" id="fb"></i></a>
        <a href="auth/login/google"><i class="fab fa-google icons" id="google"></i></a>
        <a href="auth/login/github"><i class="fab fa-github icons" id="github"></i></a>
    </div>
    <large class="form-text text-center">Don't have an account? <a href="/register">Register</a> Forgot your Password? <a href="#">Recover</a></large>
</form>
