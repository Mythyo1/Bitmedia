<form class="user-form" method="POST" action="/register">
    <% if(error.error.length !== 0) { %>
       <% error.error.forEach(error => { %> 
            <div class="alert alert-danger" role="alert">
                <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }) %>
    <% } %>
    <div class="form-row">
        <div class="form-group col">
            <label for="firstName">First Name</label>
            <input name="firstName" value="<%= firstName %>" type="text" class="form-control form-control-sm" id="firstName" placeholder="First Name">
        </div>
        <div class="form-group col">
            <label for="lastName">Last Name</label>
            <input name="lastName" value="<%= lastName %>" type="text" class="form-control form-control-sm" id="lastName" placeholder="Last name">
        </div>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email Address</label>
        <input name="email" value="<%= email %>" type="text" class="form-control form-control-sm" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="exampleInputPassword1">Password</label>
            <input name="password" type="password" class="form-control form-control-sm" id="exampleInputPassword1" placeholder="Password">
        </div>
        <div class="form-group col">
            <label for="exampleInputPassword1">Confirm</label>
            <input name="confirm" type="password" class="form-control form-control-sm" id="exampleInputPassword1" placeholder="Password">
        </div>
    </div>
    <button class="btn btn-dark btn-sm btn-block" type="submit">Submit</button>
   
    <small class="form-text text-center">Already have an account? <a href="/login">Login</a></small>
</form>