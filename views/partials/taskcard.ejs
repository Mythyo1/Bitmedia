<div class="task-card mdl-card mdl-shadow--2dp" id="task-card-<%=task.id%>">
    <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">
            <%= task.title %>
        </h2>
    </div>
    <div class="mdl-card__supporting-text">
        <span>
            <%= task.description %>
        </span>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <button class="task-card-action-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect" new-task-sidebar id="delete-<%=task.id%>" onclick="deleteTask(event)">
            <i class="material-icons">delete</i>
        </button>
        <button class="task-card-action-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect" id="complete-<%=task.id%>" onclick="completeTask(event)">
            <i class="material-icons">done</i>
        </button>
    </div>
</div>