<div class="task-card mdl-card mdl-shadow--2dp" id="task-card-<%=task.id%>">
    <div class="mdl-card__title mdl-card--expand mdl-color--primary">
        <h2 class="mdl-card__title-text">
            <%= task.title %>
        </h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--accent mdl-color--amber-50">
        <span>
            <%= task.description %>
        </span>
    </div>
    <div class="mdl-card__actions mdl-card--border mdl-color--orange">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="delete-<%=task.id%>" onclick="deleteTask(event)">
            <span>
                <i class="material-icons">delete</i>
                Delete
            </span>
        </button>
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" id="complete-<%=task.id%>" onclick="completeTask(event)">
            <span>
                <i class="material-icons">done</i>
                Complete
            </span>
        </button>
    </div>
</div>